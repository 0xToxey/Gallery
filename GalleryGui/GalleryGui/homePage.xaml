<Window x:Class="GalleryGui.homePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalleryGui"
        mc:Ignorable="d"
        Title="homePage" Height="700" Width="860" WindowStyle="None">
    <Grid>
        <TextBlock Text="HOME" FontWeight="Light" FontFamily="helvetica"
                       FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0"/>

        <StackPanel Margin="0,55,0,0">
            <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="photos">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="3" Columns="3"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
